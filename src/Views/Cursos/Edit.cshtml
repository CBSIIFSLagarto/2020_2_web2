@model SisGerenciador.src.Models.Curso

@{
    ViewData["Title"] = "Edit";
}

<h1>Edição</h1>

<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdPeriodo" class="control-label"></label>
                <input asp-for="QtdPeriodo" class="form-control" />
                <span asp-validation-for="QtdPeriodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimiteQtdPeriodoCurricular" class="control-label"></label>
                <input asp-for="LimiteQtdPeriodoCurricular" class="form-control" />
                <span asp-validation-for="LimiteQtdPeriodoCurricular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstituicaoId" class="control-label"></label>
                <select asp-for="InstituicaoId" class="form-control" asp-items="ViewBag.InstituicaoId"></select>
                <span asp-validation-for="InstituicaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoId" class="control-label"></label>
                <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.DepartamentoId"></select>
                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
